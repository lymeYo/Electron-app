{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "ES2022",
    "moduleResolution": "Node",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_preload/*": ["src/preload/*"],
      "_renderer/*": ["src/renderer/*"],
      "_types/*": ["src/types/*"],
      "_utils/*": ["src/utils/*"],
      "_tests/*": ["tests/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ES2020",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src/", "declarations.d.ts"]
}